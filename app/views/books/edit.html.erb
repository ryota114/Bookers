<body>
  <p id="notice"><%= notice %></p>
  <h2>Editing book</h2>
   <%= form_with model:@book, local:true do |f| %>
      <div class="field">
          <h4>Title</h4>
          <%= f.text_field :title %>
      </div>

      <div class="field">
          <h4>Body</h4>
          <%= f.text_area :body %>
      </div>

      <div class="action">
      <%= f.submit "Update Book" %>
      </div>
    <% end %>

    <p class="link-tag">
        <%= link_to "Show", book_path(@book.id) %>
         |
        <%= link_to "Back", books_path %>
    </p>
</body>